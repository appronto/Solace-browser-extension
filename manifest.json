{
  "name": "Emixa Solace message view Extension",
  "description": "Extension to browse solace message queues and inspect the payload.",
  "version": "2.2.1",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "tabs",
    "scripting",
    "webNavigation"
  ],
  "host_permissions": [
    "https://*.messaging.solace.cloud:943/*"
  ],
  "background": {
    "service_worker": "worker_wrapper.js"
  },
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.messaging.solace.cloud:943/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ],
  "icons": {
    "16": "src/img/emixa-logo.png"
  },
  "action": {
    "default_icon": "src/img/emixa-logo.png",
    "default_title": "Open Options"
  }
}
